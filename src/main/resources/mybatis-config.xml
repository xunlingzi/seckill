<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 配置全局属性-->
    <settings>
        <!-- 使用jdbc的getGenerateKeys获取数据库自增注解 -->
        <setting name="useGenerateKeys" value="true"/>
        <!-- 使用别名替换列名 默认：true
            select name as title form table
        -->
        <setting name="userColumnLabel" value="ture"/>
        <!-- 开启驼峰命名转换：
            Table(create_time) -> Entity(createTime)
        -->
        <setting name="mapUnderscoreCamelCase" value="true"/>
    </settings>
</configuration>